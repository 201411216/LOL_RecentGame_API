<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/result_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/keyline_first_minus">

                <ImageView
                    android:id="@+id/level_image"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/circle_accent_background" />

                <TextView
                    android:id="@+id/summoner_level_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/summoner_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/keyline_first"
            android:textColor="@color/black_alpha_87"
            android:textSize="@dimen/abc_text_size_title_material" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/profile_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/keyline_second"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/search_again_btn"
                style="@style/AppTheme.Button"
                android:text="@string/result_search_again" />

            <Button
                android:id="@+id/select_btn"
                style="@style/AppTheme.Button.Search"
                android:text="@string/result_select" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>