<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/champion_id"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="72dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/game_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="승 (1/0/1)"
            android:textColor="#87000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/game_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="일반"
            android:textColor="#54000000"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/spell1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="#000000"/>

            <ImageView
                android:id="@+id/spell2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="#000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item0"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="#90000000" />

                <ImageView
                    android:id="@+id/item1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="#80000000" />

                <ImageView
                    android:id="@+id/item2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="#70000000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="#60000000"/>

                <ImageView
                    android:id="@+id/item4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="#50000000"/>

                <ImageView
                    android:id="@+id/item5"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="#40000000"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/item6"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="#30000000"/>

    </LinearLayout>
</RelativeLayout>